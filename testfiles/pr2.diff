+		   JOIN dbo.LocalizedDataStrings lds ON lds.StringID = f.FolderName
+	WHERE  i.SubjectID = @SubjectID
+	       AND i.BalanceVisitIdentifier = @BalanceVisitIdentifier
+		   AND lds.Locale = @Locale
+END
